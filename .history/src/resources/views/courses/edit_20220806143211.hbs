<div class='mt-4'>
    <h2>Khóa học của tôi</h2>
    <form method='POST' action='/courses/store'>
        <div class='form-group'>
            <label for='name'>Tên khóa học</label>
            <input type='text' value='{{courses.name}}' id='name' class='form-control' name='name' />
        </div>
        <div class='form-group'>
            <label for='description'>Mô tả khóa học</label>
            <textarea id='description' class='form-control' name='description'>{{courses.description}}</textarea>
        </div>
        <div class='form-group'>
            <label for='videoId'>Video ID</label>
            <input type='text' value='{{courses.videoId}}' id='videoId' class='form-control' name='videoId' />
        </div>
        <div class='form-group'>
            <label for='level'>Cấp độ</label>
            <input type='text' value='{{courses.level}}' id='level' class='form-control' name='level' />
        </div>
        <button type='submit' class='btn btn-primary'>Thêm khóa học</button>
    </form>
</div>