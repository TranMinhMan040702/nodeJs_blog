<div class='mt-4'>
    <h2>Cập nhật khóa học</h2>
    <form method='POST' action='/courses/{{course._id}}?_method=PUT'>
        <div class='form-group'>
            <label for='name'>Tên khóa học</label>
            <input type='text' value='{{course.name}}' id='name' class='form-control' name='name' />
        </div>
        <div class='form-group'>
            <label for='description'>Mô tả khóa học</label>
            <textarea id='description' class='form-control' name='description'>{{course.description}}</textarea>
        </div>
        <div class='form-group'>
            <label for='videoId'>Video ID</label>
            <input type='text' value='{{course.videoId}}' id='videoId' class='form-control' name='videoId' />
        </div>
        <div class='form-group'>
            <label for='level'>Cấp độ</label>
            <input type='text' value='{{course.level}}' id='level' class='form-control' name='level' />
        </div>
        <button type='submit' class='btn btn-primary'>Lưu</button>
    </form>
</div>